---
import PageHeader from "@/components/PageHeader.astro"
import Layout from "@/layouts/Layout.astro"
import { getCollection, getEntry } from "astro:content"

export async function getStaticPaths() {
  const lectures = await getCollection("lectures")
  console.log("Lectures:", lectures)
  return lectures.map((lecture) => {
    console.log("Lecture:", lecture.slug)
    return {
      params: { slug: lecture.slug },
      props: { lecture },
    }
  })
}

const { lecture } = Astro.props
---

<Layout title={lecture.data.title}>
  <PageHeader title={lecture.data.title} paragraphs={[]} image="/images/cats-on-counter.jfif" />
</Layout>
