---
import ContactForm from "@/components/ContactForm.astro"
import PhotoBorder from "@/components/PhotoBorder.astro"
import Layout from "@/layouts/Layout.astro"
import MaxWidth from "@/layouts/MaxWidth.astro"
---

<Layout title="צרו קשר" footerProps={{ variant: "minimal" }} description="אנא השאירו פרטים ליצירת קשר">
  <script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
  <div class="bg-primary-bg p-8">
    <MaxWidth class="max-w-md">
      <PhotoBorder src="/images/contact.jfif" class="w-[310px] mx-auto" borderSize="sm" />

      <h1 class="font-bold text-xl text-center my-4">אנא השאירו פרטים ליצירת קשר:</h1>

      <ContactForm />
    </MaxWidth>
  </div>
</Layout>
